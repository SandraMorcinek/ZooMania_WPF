<UserControl x:Class="ZooMania.View.FinanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZooMania.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">

            <TextBlock Text="Dodaj wydatki"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Id:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="IDwydatkidodanieTB" Margin="0,0,0,5"/>

            <TextBlock Text="Kwota do dodania:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="wydatkidodanieTB" Margin="0,0,0,5"/>

            <Button Margin="15" Style="{StaticResource GreenButtonStyle}" Click="DodajDoWydatków">
                <fa:IconImage Icon="PlusCircle" Height="20" Foreground="White"/>
            </Button>

            <StackPanel Margin="0,40">
                
                <TextBlock Text="Odejmnij wydatki"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Id:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="IDwydatkiminusTB" Margin="0,0,0,5"/>

                <TextBlock Text="Kwota do odjęcia:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="wydatkiminusTB" Margin="0,0,0,5"/>

                <Button Margin="15" Style="{StaticResource GreenButtonStyle}" Click="OdejmnijOdWydatków">
                    <fa:IconImage Icon="MinusCircle" Height="20" Foreground="White"/>
                </Button>


            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">

            <StackPanel>

                <TextBlock Text="Zaktualizuj wydatki"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Id:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="IdZamowieniaTextbox" Margin="0,0,0,5"/>

                <TextBlock Text="Kwota:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

                <TextBox Name="WydatkiTextbox" Margin="0,0,0,5"/>

                <Button Content="Zaktualizuj wydatek" Style="{StaticResource GreenButton}" Margin="15" Click="ZaktualizujWydatki"/>

            </StackPanel>

            <StackPanel Margin="0,45">

                <TextBlock Text="Usuń z tabeli "
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Id:"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>

                <TextBox x:Name="IDusunTB" Margin="0,0,0,5"/>

                <Button Style="{StaticResource GreenButtonStyle}" Margin="15" Click="UsunFinanse_Click">
                    <fa:IconImage Icon="Trash" Height="20" Foreground="White"/>
                </Button>

            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Column="2">

            <Button Margin="15" Style="{StaticResource GreenButtonStyle}" Click="RefreshButton_Click">
                <fa:IconImage Icon="Refresh" Height="20" Foreground="White"/>
            </Button>

            <DataGrid x:Name="dgFinances" AutoGenerateColumns="False" Height="380">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Przychody" Binding="{Binding Revenue}" />
                    <DataGridTextColumn Header="Wydatki" Binding="{Binding Expenses}" />
                    <DataGridTextColumn Header="Zysk" Binding="{Binding Profit}" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
            
    </Grid>
</UserControl>
